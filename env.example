# Configuración de la aplicación Almacena
# Copiar este archivo como .env y ajustar los valores

# Base de datos
DATABASE_PATH=data/almacena.db
DATABASE_BACKUP_PATH=data/backups/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/almacena.log

# Interfaz de usuario
THEME=dark
LANGUAGE=es
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# Desarrollo
DEBUG=false
ENABLE_PROFILING=false

# Seguridad (generar valores únicos en producción)
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here 